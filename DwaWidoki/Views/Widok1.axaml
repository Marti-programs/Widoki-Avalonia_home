<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Avalonia_home.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia_home.Views.Widok1"
             x:DataType="vm:MainWindowViewModel"
			 Background="Gray">
    
    <UserControl.Resources>
        <vm:DoubleToIntConverter x:Key="DoubleToIntConverter" />
    </UserControl.Resources>
	<Grid>
		<StackPanel Margin="20">
			<Label Margin="0 10" FontSize="20">Główny widok</Label>
		</StackPanel>

		<StackPanel HorizontalAlignment="Center"
					VerticalAlignment="Center">
			<Label Margin="0 10" FontSize="20">Treść</Label>
		</StackPanel>
		
		<StackPanel Orientation="Horizontal"
				HorizontalAlignment="Left"
				VerticalAlignment="Bottom"
				Margin="10"
				Spacing="10">
            <Button Command="{Binding OnClick1}" FontSize="10" Foreground="White">Home</Button>
			<Button Command="{Binding OnClick2}" FontSize="10" Foreground="White">Kalendarz</Button>
        </StackPanel>
	</Grid>
</UserControl>
