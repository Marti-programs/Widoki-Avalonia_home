<Window xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Avalonia_home.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="225"
             x:Class="Avalonia_home.Views.Formularz"
             x:DataType="vm:MainWindowViewModel"
			 Background="Gray">
	
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
		
		<TextBlock Margin="0 5" >Nazwa:</TextBlock>
		<TextBox  Watermark="Podaj zadanie do zrobienia"
				  Text="{Binding NowaNazwaZadania, Mode=TwoWay}" />
		<Button Content="Dodaj" Click="Dodaj_rekord"
				Foreground="White" Margin="10"/>
	</StackPanel>
	
</Window>
