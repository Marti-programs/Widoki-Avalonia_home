<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- przyciski akcentowe – ciemnoszare -->
	<Style Selector="Button.AccentButtonStyle">
		<Setter Property="Background" Value="#555555"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Padding" Value="8,4"/>
		<Setter Property="CornerRadius" Value="4"/>
		<Setter Property="BorderBrush" Value="#444444"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<!-- przycisk lokalny (aktywna zakładka) – jeszcze ciemniejszy -->
	<Style Selector="Button.LocalButtonStyle">
		<Setter Property="Background" Value="#2A2A2A"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Padding" Value="8,4"/>
		<Setter Property="CornerRadius" Value="4"/>
		<Setter Property="BorderBrush" Value="#111111"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<!-- kafelek pojedynczego dnia -->
	<Style Selector="Border.DayTileStyle">
		<Setter Property="CornerRadius" Value="4"/>
		<Setter Property="BorderBrush" Value="#CCC"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Background" Value="White"/>
		<Setter Property="Padding" Value="0"/>
	</Style>

	<!--Wydarzenia-->
	<Style Selector="Border.EventCardStyle">
		<Setter Property="Background" Value="#3A3A3A"/>
		<Setter Property="CornerRadius" Value="4"/>
		<Setter Property="Padding" Value="6"/>
		<Setter Property="Margin" Value="0,4,0,0"/>
		<Setter Property="BorderBrush" Value="#555"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

</Styles>